<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ContosoPizza</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContosoPizza.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">ContosoPizza </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/PizzaList"><i class="fas fa-list"></i> Pizza Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/PizzaAdd"><i class="fas fa-plus"></i> Create Pizza</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Team"><i class="fas fa-users"></i> Our Team</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark border-top border-secondary">
        <div class="container py-2">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-light">
                    &copy; 2024 - ContosoPizza
                </small>
                <small class="text-light">
                    <i class="fas fa-phone me-2"></i>(555) 123-4567
                </small>
                <small class="text-light">
                    <i class="fas fa-envelope me-2"></i>
                    <a href="mailto:team@contosopizza.com" class="text-light text-decoration-none">team@contosopizza.com</a>
                </small>
                    <a class="text-light text-decoration-none" asp-area="" asp-page="/Privacy">
                        <small><i class="fas fa-lock me-1"></i>Privacy policy</small>
                    </a>
            </div>
        </div>
    </footer>


       
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>