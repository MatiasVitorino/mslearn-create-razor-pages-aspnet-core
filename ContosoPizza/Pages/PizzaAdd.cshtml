@page
@model ContosoPizza.Pages.PizzaAddModel
@{
    ViewData["Title"] = "Add Pizza";
}

<div class="hero-menu text-center mb-5 p-5 rounded">
    <div class="hero-content">
        <h1 class="display-3 mb-4 text-light fw-bold">Create Your Pizza </h1>
        <p class="lead text-light opacity-75 mb-0">Customize your perfect pizza with our fresh ingredients</p>
    </div>
</div>

<div class="card bg-dark text-light shadow-sm mb-5">
    <div class="card-body p-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Pizza.Name" class="form-label">
                            <i class="fas fa-tag me-2"></i>Pizza Name
                        </label>
                        <input asp-for="Pizza.Name" class="form-control" placeholder="Enter pizza name" />
                        <span asp-validation-for="Pizza.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Pizza.Price" class="form-label">
                            <i class="fas fa-euro-sign me-2"></i>Price
                        </label>
                        <input asp-for="Pizza.Price" class="form-control" value="" placeholder="Enter price" />
                        <span asp-validation-for="Pizza.Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Pizza.Size" class="form-label">
                            <i class="fas fa-ruler me-2"></i>Size
                        </label>
                        <select asp-for="Pizza.Size" class="form-select">
                            <option value="Small">Small</option>
                            <option value="Medium">Medium</option>
                            <option value="Large">Large</option>
                        </select>
                        <span asp-validation-for="Pizza.Size" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Pizza.IsGlutenFree" class="form-label">
                            <i class="fas fa-wheat-alt me-2"></i>Gluten Free
                        </label>
                        <select asp-for="Pizza.IsGlutenFree" class="form-select">
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                        <span asp-validation-for="Pizza.IsGlutenFree" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="text-center mt-5">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Add Pizza
                </button>
                <a asp-page="/PizzaList" class="btn btn-outline-light btn-lg ms-2">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </form>
    </div>
</div>

<style>
.form-control, .form-select {
    background-color: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #fff;
}

.form-control:focus, .form-select:focus {
    background-color: rgba(255, 255, 255, 0.15);
    border-color: #ff6b6b;
    color: #fff;
    box-shadow: 0 0 0 0.25rem rgba(255, 107, 107, 0.25);
}

.form-control::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

.form-select {
    background-color: rgba(33, 37, 41, 0.75) !important;
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #fff;
}

.form-select:focus {
    background-color: rgba(33, 37, 41, 0.85);
    border-color: #ff6b6b;
    color: #fff;
    box-shadow: 0 0 0 0.25rem rgba(255, 107, 107, 0.25);
}

.form-select option {
    background-color: #212529;
    color: #fff;
}

.form-label {
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
}

.hero-menu {
    background-position: center;
    border-radius: 15px;
    position: relative;
}

.hero-content {
    position: relative;
    z-index: 1;
}

.divider {
    width: 80px;
    height: 4px;
    background: #ff6b6b;
    border-radius: 2px;
}

.display-3 {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
}

.lead {
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
}

/* Add to your existing style section */
.form-control[type="number"] {
    -moz-appearance: textfield;
}

.form-control[type="number"]::-webkit-outer-spin-button,
.form-control[type="number"]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}
</style>